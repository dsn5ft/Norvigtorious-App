<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Home" >

    <TextView
        android:id="@+id/benchmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="25dp"
        android:text="BENCHMARKS"
        android:textColor="@color/text_color"
        android:textSize="26sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_statistics"
        android:layout_below="@+id/benchmarks"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@color/text_color"
        android:padding="3dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color_2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <Button
                    android:id="@+id/find_view_by_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Find View By ID"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/set_content_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Set Content View"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/read_from_ram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Read 1 MB From RAM"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/read_from_flash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Read 1 MB From Flash Memory"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sort_strings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Sort 10,000 Strings"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/packet_to_europe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Send Packet To Europe And Back"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/packet_to_europe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Send Packet To Europe And Back"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/packet_to_europe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Send Packet To Europe And Back"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/packet_to_europe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Send Packet To Europe And Back"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/packet_to_europe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:text="Send Packet To Europe And Back"
                    android:textColor="@color/text_color"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/view_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:text="View Statistics"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>